<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="starklabs.libraries.View.EditVoiceActivity"
    tools:showIn="@layout/activity_edit_voice">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nome voce"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/voiceName"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sesso"
                android:id="@+id/textView"
                android:layout_below="@+id/voiceName"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/character"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Lingua"
                android:id="@+id/textView3"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/character"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Emotion"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Effetti"
                android:id="@+id/effects"
                android:layout_marginTop="7dp" />

            <!--ragnatela-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <SeekBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar"
                    android:rotation="54"
                    android:layout_below="@+id/lab4"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="170dp" />

                <SeekBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar2"
                    android:rotation="126"
                    android:layout_below="@+id/lab4"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="170dp" />

                <SeekBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar3"
                    android:rotation="198"
                    android:layout_below="@+id/lab4"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="90dp" />

                <SeekBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar4"
                    android:rotation="270"
                    android:layout_below="@+id/lab4"

                    android:layout_marginTop="40dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_centerHorizontal="true" />

                <SeekBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar5"
                    android:rotation="342"
                    android:layout_below="@+id/lab4"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="90dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Accento"
                    android:id="@+id/lab1"
                    android:layout_below="@+id/lab4"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Energia"
                    android:id="@+id/lab2"
                    android:layout_below="@+id/lab4"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="220dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Velocità"
                    android:id="@+id/lab3"
                    android:layout_below="@+id/lab4"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimaryDark" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Altezza"
                    android:id="@+id/lab4"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Profondità"
                    android:id="@+id/lab5"
                    android:layout_below="@+id/lab4"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="250dp"
                    android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>
            <!--add voice-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modifica Voce"
                    android:id="@+id/AddVoiceButton"
                    android:layout_marginRight="30dp" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/previewButton"
                    android:src="@mipmap/ic_play"
                    android:background="@null"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>