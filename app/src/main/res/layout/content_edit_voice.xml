<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="starklabs.libraries.View.EditVoiceActivity"
    tools:showIn="@layout/activity_edit_voice">

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/character"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Emotion"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifica Voce"
        android:id="@+id/AddVoiceButton"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sesso"
        android:id="@+id/textView"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lingua"
        android:id="@+id/textView3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/character"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:rotation="54"
        android:layout_below="@+id/effects"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="130dp" />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:rotation="126"
        android:layout_below="@+id/effects"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="130dp" />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:rotation="198"
        android:layout_below="@+id/effects"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="70dp" />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar4"
        android:rotation="270"
        android:layout_below="@+id/effects"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="40dp" />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:rotation="342"
        android:layout_below="@+id/effects"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nome voce"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Effetti"
        android:id="@+id/effects"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Emotion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accent"
        android:id="@+id/lab1"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vitality"
        android:id="@+id/lab2"
        android:layout_below="@+id/seekBar2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="235dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rate"
        android:id="@+id/lab3"
        android:layout_below="@+id/seekBar3"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="48dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pitch"
        android:id="@+id/lab4"
        android:layout_above="@+id/seekBar4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Depth"
        android:id="@+id/lab5"
        android:layout_below="@+id/seekBar5"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="255dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previewButton"
        android:layout_alignRight="@+id/Emotion"
        android:layout_alignEnd="@+id/Emotion"
        android:layout_below="@+id/Emotion"
        android:layout_toEndOf="@+id/lab5"
        android:src="@mipmap/ic_play"
        android:background="@null"
        android:layout_above="@+id/seekBar5"
        android:layout_toRightOf="@+id/lab5"
        android:layout_alignParentEnd="true" />
</RelativeLayout>